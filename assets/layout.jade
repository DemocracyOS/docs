doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1', name='viewport')
    title #{title} | DemocracyOS Documentation
    link(rel='shortcut icon', type='image/x-icon', href='/' + fingerprint['assets/img/favicon.png'])
    link(rel='apple-touch-icon', href='/' + fingerprint['assets/img/favicon.png'])
    link(rel='stylesheet', type='text/css', href='/' + fingerprint['assets/css/index.css'])
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Martel:200,400', rel='stylesheet', type='text/css')
  body
    include ./partials/sidebar
    main
      .md
        != contents
    script(src='/assets/js/index.js')
    script.
      ((window.gitter = {}).chat = {}).options = {
        room: 'DemocracyOS/democracyos'
      };
    script(src='https://sidecar.gitter.im/dist/sidecar.v1.js', async='', defer='')
