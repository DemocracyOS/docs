.sidebar
  z-index: 5
  position: fixed
  left: 0
  top: 0
  width: 200px
  height: 100%
  height: 100vh
  overflow: auto
  -webkit-overflow-scrolling: touch

  padding-top: 1em
  background: inherit

  @media (min-width: 768px)
    transform: translateX(0)

  transition: transform .15s ease-out
  transform: translateX(-100%)

  .sidebar-show &
    transition: transform .15s ease-in
    transform: translateX(0)

  .logo
    display: block
    margin: 0 auto
    padding: .3em
    width: 60px

  .navigation
    padding-top: 1em

  .item
    line-height: 1.4
    font-size: 14px
    padding: .4em 1em

    &.dir
      margin: 1em 0 0

      a
        color: inherit

    &.child
      padding-left: 2em

    a
      display: block
      border: none
      font-weight: inherit
      color: #A3A3A3

      &:hover
        color: darken(#1F9285, 10%)

.sidebar-toggle
  position: fixed
  left: 0
  top: 0
  padding: .4em .6em .6em
  width: 3em
  height: 3em
  cursor: pointer
  opacity: .8
  z-index: 30

  @media (min-width: 768px)
    display: none

  .sidebar-show &
    span
      background-color: transparent
      transition-property: background-color
      transition-duration: .15s

      &:before
        transform: translateY(0) rotate(45deg)

      &:after
        transform: translateY(0) rotate(-45deg)

  div
    position: relative
    width: 100%
    height: 100%
    padding: .5em .6em .6em

  span
    box-sizing: content-box
    display: block
    position: absolute
    top: 50%
    left: 0
    width: 100%
    height: 1px
    margin-top: -.5px
    background-color: #000
    font-size: 0
    -webkit-touch-callout: none
    user-select: none
    transition: background-color 0 .15s

    &:before,
    &:after
      content: ''
      position: absolute
      left: 0
      width: 100%
      height: 100%
      background: #000
      transition: transform .3s

    &:before
      transform: translateY(-800%)

    &:after
      transform: translateY(800%)
