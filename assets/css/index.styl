@import 'nib'
@import 'lib/mini-reset'

*
  box-sizing: border-box

::-moz-selection
  text-shadow: none
  background: #B10026

::selection
  text-shadow: none
  background: #B10026

html,
body
  min-width: 100%
  min-height: 100%
  min-width: 100vw
  min-height: 100vh

body
  font-family: 'Open Sans', sans-serif
  font-weight: 300
  color: #353535
  background: #fefefe

a
  color: #D91F3E
  margin: 0
  padding: 0
  vertical-align: baseline
  text-decoration: none
  font-weight: 400

  &:visited
    color: #D91F3E

// Layout
header
  border-bottom: 1px solid rgba(#000, .07)
  background: inherit

main
  position: relative
  background: inherit
  overflow: hidden
  transition: padding .15s ease-out

  .sidebar-show &
    transition: padding .15s ease-in
    padding-left: 12.5em

  @media (min-width: 768px)
    padding-left: 12.5em

.md
  padding: 32px 32px 48px
  max-width: 640px

  @media (max-width: 767px)
    min-width: 100vw

  @import 'markdown'

@import 'sidebar'
