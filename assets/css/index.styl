@import 'lib/mini-reset'

*
  box-sizing: border-box

::-moz-selection
  text-shadow: none
  background: #B10026

::selection
  text-shadow: none
  background: #B10026

html,
body
  min-width: 100%
  min-height: 100%
  min-width: 100vw
  min-height: 100vh

body
  font-family: 'OpenSans'
  color: #353535
  background-color: #fefefe

a
  color: inherit
  margin: 0
  padding: 0
  vertical-align: baseline
  text-decoration: none
  border-bottom: 1px solid rgba(#353535, .4)

  &:hover
    text-decoration: none
    color: inherit
    border-bottom-color: rgba(#353535, .8)

  &:visited
    color: inherit


// Layout
header
  z-index: 10
  position: fixed
  left: 0
  top: 0
  width: 100%
  border-bottom: 1px solid rgba(#000, .07)
  background: inherit

  .logo
    display: block
    margin: 0 auto
    padding: .3em
    width: 40px

nav
  z-index: 5
  position: fixed
  left: 0
  top: 0
  padding-top: 3.6em
  border-right: 1px solid rgba(#000, .07)
  width: 15em
  height: 100%
  height: 100vh
  overflow: auto
  background: inherit

  @import 'sidebar'


main
  padding: 4em 2em 3em
  padding-left: 18em
  max-width: 960px

.md
  @import 'markdown'

@import 'fonts'