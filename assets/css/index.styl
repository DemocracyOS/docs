@import 'lib/mini-reset'

*
  box-sizing: border-box

::-moz-selection
  text-shadow: none
  background: #B10026

::selection
  text-shadow: none
  background: #B10026

html,
body
  min-width: 100%
  min-height: 100%
  min-width: 100vw
  min-height: 100vh

body
  font-family: 'OpenSans'
  color: #353535
  background: #fefefe

a
  color: inherit
  margin: 0
  padding: 0
  vertical-align: baseline
  text-decoration: none
  border-bottom: 1px solid rgba(#353535, .4)

  &:hover
    text-decoration: none
    color: inherit
    border-bottom-color: rgba(#353535, .8)

  &:visited
    color: inherit


// Layout
header
  border-bottom: 1px solid rgba(#000, .07)
  background: inherit

nav
  z-index: 5
  position: fixed
  left: 0
  top: 0
  padding-top: 1em
  border-right: 1px solid rgba(#000, .07)
  width: 240px
  height: 100%
  height: 100vh
  overflow: auto
  background: inherit
  -webkit-overflow-scrolling: touch

  .logo
    display: block
    margin: 0 auto
    padding: .3em
    width: 40px

  @import 'sidebar'

main
  position: relative
  padding-left: 15em
  background: inherit

.md
  padding: 32px 32px 48px
  max-width: 960px
  @import 'markdown'

@import 'fonts'